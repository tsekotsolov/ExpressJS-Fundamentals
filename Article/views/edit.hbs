<section>
  <h2>Edit article
    <div class="controls">
      {{#if isAdmin}}

      {{#if isLocked}}
      <a href="/lockStatus?id={{contentToRender.id}}">Unlock article</a>
       
      {{else}}
       <a href="/lockStatus?id={{contentToRender.id}}">Lock article</a>
      {{/if}}
      {{/if}}
    </div>
  </h2>
  <div class="spacer">
    <form action="/edit?id={{contentToRender.id}}" enctype="multipart/form-data" method="POST">
      <label>Article title</label>
      <h3>{{contentToRender.title}}</h3>
      <label>Content</label>
      <textarea name="content">{{contentToRender.content}}</textarea>
      <input type="submit" value="Submit">
    </form>
  </div>
</section>