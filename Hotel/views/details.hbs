<h1>Details View</h1>

<fieldset>
    <legend>{{selectedHotel.title}}</legend>
    <p>{{selectedHotel.location}}</p>
    <img class="hotelImg" src="{{selectedHotel.image}}" alt="hotel image">   
    <p>{{selectedHotel.description}}</p>
<div>
        <a  href="like?id={{selectedHotel._id}}"><img class="likeBtn" src="public/img/like-button-png-2.png" alt="like"></a>
        <span>{{selectedHotel.likes.length}}</span>
        <p>Total views: {{selectedHotel.views}}</p>
</div>
    
</fieldset>

{{#if currentUser}}
<div class="login-page">
    <div class="form">
        <form action="/comment?id={{selectedHotel._id}}" method="POST" class="create-form">
            <input type="text" name='title' placeholder="Title" />
            <textarea name="commentText" id="" cols="35" rows="10" placeholder="comment"></textarea>
            <br>
            <button type="submit">create</button>
        </form>
    </div>
</div>
{{/if}}


{{#each selectedHotel.comments}}
<fieldset>
    <legend>
        <p>Review Author: {{this.authorName}}</p>
    </legend>
    <p>{{this.commentText}}</p>
    <p>Posted on: {{this.creationDate}}</p>
</fieldset>
{{/each}}